<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarkdownEditor">

        <attr name="markThemeColor" format="color" />
        <attr name="markControlsGravity" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>

        <attr name="markStyle" format="enum">
            <enum name="dark" value="0" />
            <enum name="github" value="1" />
            <enum name="paperwhite" value="2" />
        </attr>

    </declare-styleable>
</resources>